{
  "name": "ROS2 Kilted Development Container",
  "dockerFile": "Dockerfile",
  "workspaceFolder": "/home/virtual/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/virtual/workspace,type=bind",
  "shutdownAction": "none",
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "WAYLAND_DISPLAY": "${localEnv:WAYLAND_DISPLAY}",
    "XDG_RUNTIME_DIR": "${localEnv:XDG_RUNTIME_DIR}",
    "PULSE_SERVER": "${localEnv:PULSE_SERVER}",
    "QT_X11_NO_MITSHM": "1",
    "LIBGL_ALWAYS_SOFTWARE": "1",
    "ROS_DOMAIN_ID": "<domain-id>",
    "ROS_AUTOMATIC_DISCOVERY_RANGE": "SUBNET",
    "RMW_IMPLEMENTATION": "rmw_fastrtps_cpp",
    "CYCLONEDDS_URI": "<CycloneDDS><Domain><Discovery><MaxAutoParticipantIndex>1000</MaxAutoParticipantIndex></Discovery><General><Interfaces><NetworkInterface name=\"lo\" multicast=\"true\"/></Interfaces></General></Domain></CycloneDDS>",
    "FASTDDS_DEFAULT_PROFILES_FILE": "/home/virtual/workspace/fastdds_profiles.xml",
    "ROS_DISCOVERY_SERVER": "<ip-address-of-robot>:11811"

  },
  "runArgs": [
    "--name=kilted_dev_container",
    "--privileged",
    "--network=host",
    "--ipc=host",
    "--pid=host",
    "--cap-add=SYS_PTRACE",
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW",
    "--security-opt=seccomp:unconfined",
    "--security-opt=apparmor:unconfined"
  ],
  "mounts": [
    "source=/etc/localtime,target=/etc/localtime,type=bind,consistency=cached,readonly=true",
    "source=/home/${localEnv:USER}/.ssh,target=/home/virtual/.ssh,readonly,type=bind",
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
    "source=/run,target=/run,type=bind,consistency=cached",
    "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "alesiong.clang-tidy-linter",
        "althack.ament-task-provider",
        "chrismeyers.vscode-pretty-json",
        "DotJoshJohnson.xml",
        "eamodio.gitlens",
        "fabiospampinato.vscode-highlight",
        "justusadam.language-haskell",
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-azuretools.vscode-docker",
        "ms-iot.vscode-ros",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-ssh-edit",
        "ms-vscode-remote.remote-wsl",
        "ms-vscode-remote.vscode-remote-extensionpack",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools",
        "ms-vscode.remote-explorer",
        "ms-vscode.remote-server",
        "redhat.vscode-yaml",
        "smilerobotics.urdf",
        "streetsidesoftware.code-spell-checker",
        "twxs.cmake",
        "usernamehw.errorlens",
        "xaver.clang-format",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}
